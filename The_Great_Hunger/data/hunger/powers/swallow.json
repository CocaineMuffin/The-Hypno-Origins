{
    "type":"origins:multiple",
    "chomp":{
        "type": "origins:target_action_on_hit",
        "entity_action": {
            "type":"origins:and",
            "actions":[
                {
                    "type": "origins:execute_command",
                    "command": "playsound minecraft:entity.generic.eat master @a[distance=..6] ~ ~ ~ 100 0.5 1",
                    "permission_level": 4
                },
                {
                    "type":"origins:execute_command",
                    "command":"power grant @s[type=!minecraft:ender_dragon,type=!minecraft:wither] hunger:stomach",
                    "permission_level": 4
                }
                
            ]
        },
        "damage_condition": {
            "type": "origins:projectile",
            "inverted": true
            },
			"condition": {
			"type": "origins:and",
			"conditions": [
                {
					"type": "origins:equipped_item",
					"equipment_slot": "mainhand",
					"item_condition": {
                        "type": "origins:empty"
                    }
				},
				{      
                    "type": "origins:resource",
                    "resource": "*:*_toggle",
                    "comparison": "==",
                    "compare_to": 1
				},
                {      
                    "type": "origins:resource",
                    "resource": "*:*_mouth_limit",
                    "comparison": "==",
                    "compare_to": 3,
                    "inverted": true
                }
			]
		},
        "cooldown": 300,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_points_01.png",
		    "bar_index": 2
            }
        },
    "stuffy_bunny":{
        "type": "origins:self_action_on_hit",
        "entity_action": {
            "type": "origins:delay",
            "ticks": 1,
            "action": {
                    "type": "origins:change_resource",
                    "resource": "*:*_mouth_limit",
                    "operation": "add",
                    "change": 1
                }
        },
        "damage_condition": {
            "type": "origins:projectile",
            "inverted": true
            },
			"condition": {
			"type": "origins:and",
			"conditions": [
                {
					"type": "origins:equipped_item",
					"equipment_slot": "mainhand",
					"item_condition": {
                        "type": "origins:empty"
                    }
				},
				{      
                    "type": "origins:resource",
                    "resource": "*:*_toggle",
                    "comparison": "==",
                    "compare_to": 1
				},
                {      
                    "type": "origins:resource",
                    "resource": "*:*_mouth_limit",
                    "comparison": "==",
                    "compare_to": 3,
                    "inverted": true
                }
			]
		},
        "cooldown": 300,
        "hud_render": {
            "should_render": false
            }
        },
    "spit_out": {
        "type": "origins:active_self",
        "entity_action": {
            "type":"origins:and",
            "actions":[
                {
                    "type":"origins:execute_command",
                    "command":"playsound minecraft:entity.llama.spit master @a[distance=..6] ~ ~ ~ 100 0.8 1",
                    "permission_level": 4
                },
                {
                    "type":"origins:execute_command",
                    "command":"power revoke @e[distance=..10] hunger:stomach",
                    "permission_level": 4
                },
                {
                    "type":"origins:execute_command",
                    "command":"execute if entity @e[team=prey,distance=1..] run team leave @e[team=prey,distance=1..]",
                    "permission_level": 4
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_mouth_limit",
                    "operation": "set",
                    "change": 0
                }
                ]
            },
            "condition": {
                "type": "origins:sneaking"
            },
        "cooldown": 20,
        "hud_render": {
            "should_render": false
            },
        "key": {
            "key": "key.saveToolbarActivator",
            "continuous": false
            }
        },
    "mouth_limit": {
        "type": "origins:resource",
        "min": 0,
        "max": 3,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 13
        }
    },
    "toggle": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_03.png",
		    "bar_index": 22
        }
    },
    "toggle2": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {      
                        "type": "origins:resource",
                        "resource": "*:*_toggle",
                        "comparison": "==",
                        "compare_to": 1
                    },
                    {
                        "type": "origins:sneaking",
                        "inverted": true
                    }
                ]
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "*:*_toggle",
                "change": -1
            },
        "else_action": {
            "type": "origins:change_resource",
            "resource": "*:*_toggle",
            "change": 1
        }
    },
    "cooldown": 2,
    "hud_render": {
        "should_render": false
        },
        "key": {
            "key": "key.saveToolbarActivator",
            "continuous": false
            }
        },
    "name": "§a§l§nChomp",
    "description": "Using your huge mouth, you can eat people whole. (toggle on and hit a mob/player with your fists, shift + saveToolbarActivator to spit out the mobs. ps. players can shift to escape from your mouth after 5 seconds)"
}